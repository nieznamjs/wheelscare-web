{
  "name": "wc-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run copy-templates &&  nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "npm run copy-templates && nest start",
    "start:dev": "npm run copy-templates && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "copy-templates": "copyfiles -f src/common/templates/*.hbs dist/src/common/templates",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register -r dotenv/config ./node_modules/typeorm/cli.js",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:generate": "npm run typeorm -- migration:generate"
  },
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "0.0.7",
    "@nestjs/core": "^6.7.2",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/swagger": "^4.1.10",
    "@nestjs/typeorm": "^6.2.0",
    "@sendgrid/mail": "^6.4.0",
    "aws-sdk": "^2.598.0",
    "bcrypt": "^3.0.7",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cookie-parser": "^1.4.4",
    "faker": "^4.1.0",
    "handlebars": "^4.5.3",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.16.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.2",
    "typeorm": "^0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.8",
    "@types/hapi__joi": "^16.0.5",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "aws-sdk-mock": "^5.0.0",
    "copyfiles": "^2.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": [
      "**/*.ts",
      "!migrations/**",
      "!**/*.entity.ts",
      "!**/*.dto.ts",
      "!**/*.module.ts",
      "!**/*.spec.ts"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@config$": "<rootDir>/config",
      "^@services$": "<rootDir>/common/services",
      "^@interfaces$": "<rootDir>/common/interfaces",
      "^@dtos$": "<rootDir>/common/dtos",
      "^@constants$": "<rootDir>/common/constants",
      "^@errors$": "<rootDir>/common/errors",
      "^@entities$": "<rootDir>/common/entities",
      "^@shared$": "<rootDir>/../../shared"
    }
  }
}
